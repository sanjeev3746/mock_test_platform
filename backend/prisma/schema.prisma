generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  attempts     Attempt[]
}

model Exam {
  id       String   @id @default(uuid())
  name     String
  duration Int
  tests    Test[]
}

model Test {
  id        String   @id @default(uuid())
  examId    String
  duration  Int
  exam      Exam     @relation(fields: [examId], references: [id])
  questions Question[]
  attempts  Attempt[]
}

model Question {
  id       String        @id @default(uuid())
  testId   String
  text     String
  type     QuestionType
  marks    Float
  negative Float
  topic    String
       
  test     Test          @relation(fields: [testId], references: [id])
  options  Option[]
}


model Option {
  id         String   @id @default(uuid())
  questionId String
  text       String
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])
}

model Attempt {
  id        String   @id @default(uuid())
  userId    String
  testId    String
  startTime DateTime
  endTime   DateTime
  submitted Boolean  @default(false)

  user   User @relation(fields: [userId], references: [id])
  test   Test @relation(fields: [testId], references: [id])
  result Result?

  responses Response[]
}

model Result {
  id        String  @id @default(uuid())
  attemptId String  @unique
  score     Float
  attempt   Attempt @relation(fields: [attemptId], references: [id])
}

enum QuestionType {
  MCQ_SINGLE
  MCQ_MULTIPLE
  NUMERICAL
}

model Response {
  id         String   @id @default(uuid())
  attemptId  String
  questionId String
  optionId   String?
  marked     Boolean  @default(false)   // ðŸ”¥ NEW FIELD

  attempt   Attempt  @relation(fields: [attemptId], references: [id])
}



